# Database Configuration / Configuration Base de Données
# Option 1: Use DATABASE_URL (Replit, Heroku, etc.)
# DATABASE_URL=postgresql://username:password@localhost:5432/villa_sales

# Option 2: Use individual PostgreSQL variables (VPS, local development)
# The app will automatically build DATABASE_URL from these if DATABASE_URL is not set
PGHOST=localhost
PGPORT=5432
PGUSER=villa_user
PGPASSWORD=your_secure_password_here
PGDATABASE=villa_sales

# Flask Configuration / Configuration Flask
SECRET_KEY=your-very-secret-random-key-change-this-in-production
FLASK_ENV=production
FLASK_DEBUG=0

# Admin Authentication / Authentification Admin
# Default password: @4dm1n (CHANGE THIS IN PRODUCTION!)
# Mot de passe par défaut : @4dm1n (CHANGEZ CECI EN PRODUCTION !)
ADMIN_PASSWORD=@4dm1n

# OpenRouter API (for AI features / pour fonctionnalités IA)
# Get your key at: https://openrouter.ai/
# Obtenez votre clé sur : https://openrouter.ai/
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Application Settings / Paramètres Application
UPLOAD_FOLDER=static/uploads
MAX_CONTENT_LENGTH=16777216
